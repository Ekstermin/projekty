<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/tlo2"
    tools:context="pl.winiarek.dominik.Activity_HistoriaPomiarow"
    tools:showIn="@layout/activity__historiapomiarow">

    <LinearLayout
        android:id="@+id/brak_pomiaru"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brak_pomiar_w"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Jest_pomiar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />
        <ListView
            android:id="@+id/listview_historia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="3dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
