<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.winiarek.dominik.sugarap">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name=".SugarAP"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.winiarek.dominik.Activity_HistoriaPomiarow"
            android:label="@string/title_activity__HistoriaPomiatow"

            android:parentActivityName=".SugarAP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.winiarek.dominik.sugarap.SugarAP"
                android:screenOrientation="portrait"/>
        </activity>
        <activity
            android:name="pl.winiarek.dominik.Activity_Kalkulator"
            android:label="@string/title_activity__kalkulator"
            android:parentActivityName=".SugarAP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.winiarek.dominik.sugarap.SugarAP"
                android:screenOrientation="portrait"/>
        </activity>
        <activity
            android:name="pl.winiarek.dominik.Activity_Produkty"
            android:label="@string/title_activity__produkty"
            android:parentActivityName=".SugarAP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.winiarek.dominik.sugarap.SugarAP"
                android:screenOrientation="portrait"/>
        </activity>
        <activity
            android:name="pl.winiarek.dominik.Activity_Pomiar"
            android:label="@string/title_activity__pomiar"
            android:parentActivityName=".SugarAP"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.winiarek.dominik.sugarap.SugarAP"
                android:screenOrientation="portrait"/>
        </activity>
    </application>

</manifest>